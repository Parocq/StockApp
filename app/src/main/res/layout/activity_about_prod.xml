        android:textColorHint="#00000000"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView05" />

    <Button
        android:id="@+id/buttonDelProd"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        android:background="#F44336"
        android:text="@string/DelProdBut"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/buttonChangeProdInf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView06"
        android:onClick="onDelProdButClick"/>

    <Button
        android:id="@+id/buttonChangeProdInf"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
